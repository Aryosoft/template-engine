
<% this.useLayout('layout2') %>

<layout:section name="styles">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"/>
</layout:section>

<% this.section('styles') %>

    <table class="table table-bordered">
        <thead>
            <tr>
                <th>#</th>
                <th>Serial</th>
                <th>Name</th>
                <th>Surname</th>
            </tr>
        </thead>
        <tbody>
            <% for(let i=0; i < $model.people.length; i++) { %>
                <tr>
                    <th>
                        <%= (i+1)%>
                    </th>
                    <td>
                        <%= $model.people[i].serial %>
                    </td>
                    <td>
                        <%=  $model.people[i].name %>
                    </td>
                    <td>
                        <%= $model.people[i].surname %>
                    </td>
                </tr>
                <%}%>
        </tbody>
    </table>